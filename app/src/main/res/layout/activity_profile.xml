<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:adjustViewBounds="true"
        android:background="@drawable/btn_top_bg"
        android:elevation="10dp"
        android:src="@drawable/icon_back"
        tools:ignore="SpeakableTextPresentCheck" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/pp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/pp"
        android:elevation="6dp"
        app:civ_border_color="@color/colorBottleGreen"
        app:civ_border_width="1dp" />

    <FrameLayout
        android:id="@+id/frameName"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3399E6DF"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorBottleGreen"
        cardview:layout_constraintTop_toBottomOf="@id/pp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Nama:"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="#80114F5A"
            android:textSize="24sp"
            android:fontFamily="@font/bellefair" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:text="Atika SP"
                android:layout_marginEnd="24dp"
                android:textColor="@color/colorBottleGreen"
                android:textSize="24sp"
                android:fontFamily="@font/bellefair" />



    </FrameLayout>

    <FrameLayout
        android:id="@+id/frameEmail"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#3399E6DF"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="4dp"
        android:textColor="@color/colorBottleGreen"
        cardview:layout_constraintTop_toBottomOf="@id/frameName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/title_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:text="Email:"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:textColor="#80114F5A"
            android:textSize="24sp"
            android:fontFamily="@font/bellefair" />


        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="atikasparindo@gmail.com"
            android:layout_marginEnd="24dp"
            android:textColor="@color/colorBottleGreen"
            android:textSize="16sp"
            android:fontFamily="@font/bellefair" />



    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>